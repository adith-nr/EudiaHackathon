{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://eudiahack.local/agent-schema.json",
  "title": "AgentPayload",
  "type": "object",
  "properties": {
    "role": {
      "type": "string",
      "enum": ["coordinator", "pricing", "analytics", "finance", "insight"]
    },
    "context": {
      "type": "object",
      "properties": {
        "store_id": { "type": "string" },
        "currency": { "type": "string", "minLength": 3, "maxLength": 3 }
      },
      "required": ["store_id", "currency"]
    },
    "goals": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "data": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": ["role", "context", "goals"],
  "additionalProperties": false
}
